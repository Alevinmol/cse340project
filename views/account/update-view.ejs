<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %> 
    
    <%- messages() %>
    
    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%=error.msg%></li>
        <% }) %>
      </ul>
    <% } %>

    <div id="update">
        <form action="/account/update" method="post">
          <fieldset>
            <p>All fields are required</p>
            <label for="first name">
              First name
              <input type="text" id="first name" name="account_firstname" required value="<%= locals.account_firstname %>"/>
            </label>
            <label for="last name">
              Last name
              <input type="text" id="last name" name="account_lastname" required value="<%= locals.account_lastname %>"/>
            </label>
            <label for="email">
              Email address
              <input
                type="email"
                id="email"
                name="account_email"
                required
                placeholder="Enter a valid email address"
                value="<%= locals.account_email %>"
              />
            </label>
            <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
            <button type="submit">Update</button>
          </fieldset>
        </form>
    </div>
<span>
    <div>
        <form action="account/password" method="post">
            <p>This is a different form to change your password</p>
            <label for="loginpassword">
                Password
                <input
                  type="password"
                  id="loginpassword"
                  name="account_password"
                  pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                  required
                />
              </label>
              <p>
                *The password must be at least 12 characters and has at least 1
                uppercase character, 1 number and 1 special character.
              </p>
            </label>
            <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
            <button type="submit">Update password</button>
        </form>
    </div>
</span>